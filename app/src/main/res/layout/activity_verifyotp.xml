<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verifyotp"
    android:background="#D9F2FE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:orientation="vertical">

        <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ott"
            android:gravity="center"/>-->
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_fileName="editor.json"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTP VERIFICATION"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/hid"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textSize="30dp"
                android:background="@drawable/et_style"
                android:textColor="#01ADC4"
                android:textStyle="bold"
                android:id="@+id/otp1"
                android:inputType="number"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:gravity="center"
                />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textSize="30dp"
                android:background="@drawable/et_style"
                android:textColor="#01ADC4"
                android:textStyle="bold"
                android:id="@+id/otp2"
                android:inputType="number"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:gravity="center"
                />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textSize="30dp"
                android:background="@drawable/et_style"
                android:textColor="#01ADC4"
                android:textStyle="bold"
                android:id="@+id/otp3"
                android:inputType="number"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:gravity="center"
                />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textSize="30dp"
                android:background="@drawable/et_style"
                android:textColor="#01ADC4"
                android:textStyle="bold"
                android:id="@+id/otp4"
                android:inputType="number"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:gravity="center"
                />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textSize="30dp"
                android:background="@drawable/et_style"
                android:textColor="#01ADC4"
                android:textStyle="bold"
                android:id="@+id/otp5"
                android:inputType="number"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:gravity="center"
                />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textSize="30dp"
                android:background="@drawable/et_style"
                android:textColor="#01ADC4"
                android:textStyle="bold"
                android:id="@+id/otp6"
                android:inputType="number"
                android:textAlignment="center"
                android:gravity="center"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/verf"
                android:backgroundTint="#1B2441"
                android:textColor="#01ADC4"/>
            <ProgressBar
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/verify_otp_pgbar"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter new Password"
                android:textSize="20dp"
                android:inputType="textPassword"
                android:id="@+id/newps"
                android:visibility="invisible"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/cnfnewps"
                android:visibility="invisible"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="submit"
                android:layout_marginTop="10dp"
                android:backgroundTint="#1B2441"
                android:textColor="#01ADC4"
                android:id="@+id/submps"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>