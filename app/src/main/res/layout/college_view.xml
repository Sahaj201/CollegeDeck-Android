<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D9F2FE">
    <include layout="@layout/toolbar"
        android:id="@+id/cust_collg_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#01ADC4"
                android:text="COLLEGE TITLE"
                android:textSize="30dp"
                android:textColor="#1B2441"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/clg_img"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dtls"
                android:backgroundTint="#00000000"
                android:layout_marginTop="20dp"
                android:id="@+id/detailsbt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:gravity="center"
                android:layout_marginTop="-20dp"
                android:textSize="20dp"
                android:textStyle="bold"/>


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/feessss"
                android:backgroundTint="#00000000"
                android:layout_marginTop="10dp"
                android:id="@+id/feesbt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fees"
                android:gravity="center"
                android:layout_marginTop="-15dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/htapl"
                android:backgroundTint="#00000000"
                android:layout_marginTop="10dp"
                android:id="@+id/hwtbt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to apply"
                android:gravity="center"
                android:layout_marginTop="-15dp"
                android:textSize="20dp"
                android:textStyle="bold"/>


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ctof"
                android:backgroundTint="#00000000"
                android:layout_marginTop="10dp"
                android:id="@+id/ctofbt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cutoff"
                android:gravity="center"
                android:layout_marginTop="-15dp"
                android:textSize="20dp"
                android:textStyle="bold"/>


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/plcmnt"
                android:backgroundTint="#00000000"
                android:layout_marginTop="10dp"
                android:id="@+id/plcmbt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placements"
                android:gravity="center"
                android:layout_marginTop="-15dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/urlsrch"
                android:backgroundTint="#00000000"
                android:layout_marginTop="10dp"
                android:id="@+id/urll"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="URL"
                android:gravity="center"
                android:layout_marginTop="-20dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>